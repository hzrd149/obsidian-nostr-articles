		"@types/react-dom": "^18.2.7",
		"@types/uuid": "^9.0.2",
		"@typescript-eslint/eslint-plugin": "5.29.0",
		"@typescript-eslint/parser": "5.29.0",
		"builtin-modules": "3.3.0",
		"esbuild": "0.17.3",
		"obsidian": "latest",
		"tslib": "2.4.0",
		"typescript": "5.2.2"
	},
	"dependencies": {
		"axios": "^1.6.8",
		"nostr-tools": "^2.3.1",
		"uuid": "^9.0.0"
	}
