{
  "compilerOptions": {
    "strict": true,
    "baseUrl": ".",
    "inlineSourceMap": true,
    "inlineSources": true,
    "module": "NodeNext",
    "target": "ES6",
    "allowJs": true,
    "noImplicitAny": true,
    "moduleResolution": "NodeNext",
    "importHelpers": true,
    "isolatedModules": true,
    "jsx": "react",
    "strictNullChecks": true,
    "lib": ["DOM", "ES5", "ES6", "ES7"]
  },
  "include": ["**/*.ts", "**/*.mts", "**/*.tsx", "main.mts"]
}
